{% extends 'base.html.twig' %}


{% block title %}
    {{ 'label.answers_view'|trans }} {{ question.content }}
{% endblock %}

{% block body %}
    <div class="content">
        <h1>{{ 'label.answers_view'|trans }} {{ question.content }}</h1>
        <ul>
            {% for row in answers %}
                <li>
                    {{ row.answer }}
                </li>
                <br>
            {% endfor %}
        </ul>

        <br><br><br>
        <a class="btn btn-outline-primary" href="{{ url('questions_view', {'id': question.survey_id}) }}"
           title="{{ 'label.back_to_questions'|trans }}">
            {{ 'label.back_to_questions'|trans }}
        </a>
        <br><br><br>
    </div>
{% endblock %}