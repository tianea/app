{% extends 'base.html.twig' %}


{% block title %}
    {{ 'label.users_index'|trans }}
{% endblock %}

{% block body %}
    <div class="content">
        <h1>{{ 'label.users_index'|trans }}</h1>
        <ul>
            {% for row in users %}
                <li>
                    <a href="{{ url('user_account', {'id': row.id}) }}" title="{{ row.login }}">
                        {{ row.login }}
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-danger btn-sm" href="{{ url('users_delete', {'id': row.id}) }}"
                           title="{{ 'title.users_delete'|trans }}">
                            {{ 'title.users_delete'|trans }}
                        </a>
                        <a class="btn btn-info btn-sm" href="{{ url('user_passwd_edit', {'id': row.id}) }}"
                           title="{{ 'label.user_passwd_edit'|trans }}">{{ 'label.user_passwd_edit'|trans }}</a>
                        <a class="btn btn-secondary btn-sm" href="{{ url('user_edit', {'id': row.id}) }}"
                           title="{{ 'label.user_edit'|trans }}">{{ 'label.user_edit'|trans }}</a>
                        <a class="btn btn-warning btn-sm" href="{{ url('user_change_role', {'id': row.id}) }}"
                           title="{{ 'label.user_change_role'|trans }}">{{ 'label.user_change_role'|trans }}</a>
                    {% endif %}
                </li>
                <br>
            {% endfor %}
        </ul>
    </div>
{% endblock %}