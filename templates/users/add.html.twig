{% extends 'base.html.twig' %}

{% block title %}{{ 'title.sign_up'|trans }}{% endblock %}

{% block body %}
    <div class="content">
        {% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', 'form/form_errors.html.twig'] %}
        <h1>{{ 'title.sign_up'|trans }}</h1>

        {% if error is defined and error|length %}
            {% include 'default/_single_alert_message.html.twig' with {
            is_single_message: true,
            is_dismissible: false,
            type: 'danger',
            message: error,
            } %}
        {% endif %}

        <div>
            {{ form_start(form, { method: 'post', action: url('sign_up') }) }}
            {{ form_widget(form) }}
            <input type="submit" value="{{ 'action.sign_up'|trans }}" class="btn btn-success" />
            {{ form_end(form) }}
            <br><br><br>
        </div>
    </div>
{% endblock %}