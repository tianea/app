{% extends 'base.html.twig' %}


{% block title %}
    {{ 'label.questions_index'|trans }}
{% endblock %}

{% block body %}
    <div class="content">
        <h1>{{ 'label.questions_index_view'|trans }} {{ survey.name }}</h1>
        <ol>
            {% for row in questions %}
                <li>
                    {{ row.content }}
                    <a class="btn btn-info btn-sm" href="{{ url('questions_answer', {'id': question.id}) }}" title="{{ 'title.questions_answer'|trans }}">
                        {{ 'title.questions_answer'|trans }}
                    </a>
                </li>
                <br>
            {% endfor %}
        </ol>
        <br><br><br>
        <a class="btn btn-outline-primary" href="{{ url('surveys_view', {'id': survey.id}) }}"
           title="{{ 'label.back_to_survey' }}">
            {{ 'label.back_to_survey' }}
        </a>
        <br><br><br>
    </div>
{% endblock %}